<div class="row">
  <div class="col">
    <div class="card mx-auto" style="max-width: 30rem">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_for @conn, Routes.session_path(@conn, :create), [as: :session], fn f -> %>
          <%= input f, :email %>
          <%= input f, :password %>
          <%= submit "Login", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
